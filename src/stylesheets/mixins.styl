// Fonts mixin
font-url(file)
    return '~_fonts/' + file

webfont(family, folder, file, weight = 'normal', style = 'normal')
    @font-face
        font-family family
        src url(font-url(folder + '/' + file + '.woff2')) format('woff2'),
        url(font-url(folder + '/' + file + '.woff')) format('woff')
        font-weight weight
        font-style style
